---
interface Props {
  quote: string;
  attribution?: string;
  attributionUrl?: string;
  timestampUrl?: string;
  hideAttribution?: boolean;
}

const { quote, attribution, attributionUrl, timestampUrl, hideAttribution } = Astro.props;
---
{quote && (
  <div class="pick-item">
    <blockquote>
      {timestampUrl ? (
        <a href={timestampUrl} class="quote-link" target="_blank" rel="noopener noreferrer">
          <p>&ldquo;{quote}&rdquo;</p>
        </a>
      ) : (
        <p>&ldquo;{quote}&rdquo;</p>
      )}
    </blockquote>
    {!hideAttribution && attribution && (
      <div class="quote-attribution">
        {attributionUrl ? (
          <a href={attributionUrl}>{attribution}</a>
        ) : (
          <span>{attribution}</span>
        )}
      </div>
    )}
  </div>
)}
